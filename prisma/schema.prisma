// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  league_ign   String   @unique
  server       Server
  rank         Rank
  roles        Role[]
  win          Int      @default(0)
  loss         Int      @default(0)
  elo          Int      @default(0)
  external_elo Int      @default(0)
  queuer       Queuer[]
  Player       Player[]
  Scrim        Scrim[]
}

enum Team {
  RED
  BLUE
}

model Player {
  player  User   @relation(fields: [userId], references: [id])
  scrim   Scrim  @relation(fields: [scrimId], references: [id])
  userId  String
  scrimId BigInt
  role    Role
  team    Team

  @@id([userId, scrimId])
}

model Scrim {
  id            BigInt   @id @default(autoincrement())
  status        Status
  voice_ids     String[]
  players       Player[]
  queue         Queue    @relation(fields: [queue_id], references: [id])
  queue_id      String
  lobby_creator User     @relation(fields: [userId], references: [id])
  userId        String
}

model Queue {
  id     String   @id @default(uuid())
  server String   @unique
  queuer Queuer[]
  Scrims Scrim[]
}

model Queuer {
  player    User     @relation(fields: [player_id], references: [id])
  player_id String
  queue     Queue    @relation(fields: [queue_id], references: [id])
  queue_id  String
  popped    Boolean  @default(false)
  queuedAt  DateTime @default(now())


  @@id([player_id, queue_id])
}

enum Status {
  LOBBY
  INGAME
  COMPLETED
  REMADE
}

enum Server {
  EUW
  NA
}

enum Rank {
  IRON
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
  MASTER
  GRANDMASTER
  CHALLENGER
}

enum Role {
  TOP
  JUNGLE
  MID
  BOT
  SUPPORT
}
