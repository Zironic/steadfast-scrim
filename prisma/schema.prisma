// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id
  league_ign          String   @unique
  region              Region
  rank                Rank
  main                Role
  secondary           Role
  wins                Int      @default(0)
  losses              Int      @default(0)
  elo                 Int      @default(0)
  external_elo        Int      @default(0)
  autofill_protected Boolean  @default(false)
  player              Player[]
}

enum Side {
  RED
  BLUE
}

model Player {
  user     User   @relation(fields: [user_id], references: [id])
  scrim    Scrim  @relation(fields: [scrim_id], references: [id])
  user_id  String
  scrim_id Int
  role     Role
  side     Side

  @@id([user_id, scrim_id])
}

model Scrim {
  id        Int      @id @default(sequence())
  status    Status   @default(STARTED)
  voice_ids String[]
  players   Player[]
  guildID   String
  region    Region
  winner    Side?
}

enum Status {
  STARTED
  REMAKE
  COMPLETED
}

enum Region {
  EUW
  NA
}

enum Rank {
  IRON
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
  MASTER
  GRANDMASTER
  CHALLENGER
}

enum Role {
  TOP
  JUNGLE
  MID
  BOT
  SUPPORT
}
