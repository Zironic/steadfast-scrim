// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  league_ign   String   @unique
  server       Server
  rank         Rank
  roles        Role[]
  win          Int      @default(0)
  loss         Int      @default(0)
  elo          Int      @default(0)
  external_elo Int      @default(0)
  queuer       Queuer[]
  player       Player[]
}

enum Team {
  RED
  BLUE
}

model Player {
  user     User   @relation(fields: [user_id], references: [id])
  scrim    Scrim  @relation(fields: [scrim_id], references: [id])
  user_id  String
  scrim_id Int
  role     Role
  team     Team

  @@id([user_id, scrim_id])
}

model Scrim {
  id        Int      @id @default(sequence())
  status    Status
  voice_ids String[]
  players   Player[]
  queue     Queue    @relation(fields: [queue_id], references: [id])
  queue_id  String
}

model Queue {
  id     String   @id @default(uuid())
  server String   @unique // Discord server
  queuer Queuer[]
  Scrims Scrim[]
}

model Queuer {
  player    User     @relation(fields: [player_id], references: [id])
  player_id String
  queue     Queue    @relation(fields: [queue_id], references: [id])
  queue_id  String
  popped    Boolean  @default(false)
  queuedAt  DateTime @default(now())


  @@id([player_id, queue_id])
}

enum Status {
  LOBBY
  INGAME
  COMPLETED
  REMADE
}

enum Server {
  EUW
  NA
}

enum Rank {
  IRON
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
  MASTER
  GRANDMASTER
  CHALLENGER
}

enum Role {
  TOP
  JUNGLE
  MID
  BOT
  SUPPORT
}
